@{
      ViewData["Title"] = "SubCo";
    Layout = "~/Views/SubCo/_LayoutSubCo.cshtml";

}
@model Final_LitchiLearn.Models.Tasking

<form method="post" asp-action="Update">
    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Tasks</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="TaskingName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Date"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="TaskingName" class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Status" class="form-control" />
                    </div>
                     <div class="col-6">
                        <input asp-for="Date" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</form>


