

@{
    ViewData["Title"] = "Curiculum Page";
    Layout = "~/Pages/AdminDashboardLayout.cshtml";
}

@using Final_LitchiLearn.Models
@model Final_LitchiLearn.Models.CurriculumModel
<!DOCTYPE HTML>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
</head>
<body> 

    <h4>Curiculum Page</h4>

<hr />
<div class="row">
    <div class="col-md-4">

            <form method="post" asp-action="CuriculumPage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                        <option value="" disabled selected hidden>Select A Grade</option>
                    <option value="Grade 4">Grade 4</option>
                    <option value="Grade 5">Grade 5</option>
                    <option value="Grade 6">Grade 6</option>
                    <option value="Grade 7">Grade 7</option>                    
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                    <select asp-for="Subject" class="form-control">
                    <option value="" disabled selected hidden>Select A Subject</option>
                    <option value="Afrikaans">Afrikaans</option>
                    <option value="English">English</option>
                    <option value="Geography">Geography</option>
                    <option value="Life Orientation">Life Orientation</option>
                    <option value="Mathematics">Mathematics</option>                                        
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
               
            <div class="form-group">

                    <label>Select a file:</label><br />
                    <input asp-for="PDFfile" type="file" accept="application/pdf"
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"/><br />
                    <span asp-validation-for="PDFfile" class="text-danger"></span>


            </div>
            <div class="form-group">
                    <input type="submit" class="btn btn-info w-75" value="Add Curiculum" />
            </div>
        </form>
    </div>
</div>





</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
