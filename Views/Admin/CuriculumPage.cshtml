

@{
    ViewData["Title"] = "Curiculum Page";
    Layout = "~/Pages/AdminDashboardLayout.cshtml";
}

@using Final_LitchiLearn.Models
@model Final_LitchiLearn.Models.CurriculumModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
</head>
<body> 

    <h4>Curiculum Page</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Admin" asp-action="CreateCuriculum">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                    <option value="Null">Select A Grade</option>
                    <option value="Grade 4">Grade 4</option>
                    <option value="Grade 5">Grade 5</option>
                    <option value="Grade 6">Grade 6</option>
                    <option value="Grade 7">Grade 7</option>                    
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                    <option value="Null">Select A Subject</option>
                    <option value="Afrikaans">Afrikaans</option>
                    <option value="English">English</option>
                    <option value="Geography">Geography</option>
                    <option value="Life Orientation">Life Orientation</option>
                    <option value="Mathematics">Mathematics</option>                                        
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file"
                       accept=".pdf"
                       asp-for="PDFfile"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('PDFfile').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="PDFfile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Curiculum" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
