@{
    Layout = "~/Pages/AdminDashboardLayout.cshtml";
}
@using Final_LitchiLearn.Models
@model IEnumerable<Final_LitchiLearn.Models.UserAccountModel>

<!DOCTYPE HTML>
<html>
    <head>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <style>     
        
    </style>
    </head>
    <body>
        <div class="landing-page"><!--Start of Nav Bar-->
  <div class="container">
        <div class="header-area">
      <div class="logo">LitchiLearn</div>
      <ul class="links">
        <li><a type="button" class="nav-link text-dark" asp-controller="Admin" asp-action="AdminDashboard" >  Home </a></li>      
        <li>Log Out</li>
      </ul>
    </div>
    </div>
    </div><!--End of Nav Bar-->
    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>                    
                    <th>User Name</th>
                    <th>Password</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>User Type</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userAccountModel in Model)
                { if (userAccountModel.Active == "True")
                    {
                        <tr>
                            <td width="10%">@userAccountModel.Username</td>
                        <td width="10%">@userAccountModel.Password</td>
                        <td width="10%">@userAccountModel.FirstName</td>
                        <td width="10%">@userAccountModel.Surname</td>
                        <td width="10%">@userAccountModel.Usertype</td>
                        <td width="15%">@userAccountModel.Email</td>
                            <td width="10%"> <a asp-controller="Admin" asp-action="AdminEditAccountChosen" asp-route-ID="@userAccountModel.UserID" class="btn btn-primary">Update Record</a></td>
                            <td width="10%"> <a asp-controller="Admin" asp-action="AdminRemoveAccountChosen" asp-route-ID="@userAccountModel.UserID" class="btn btn-danger w-75">Remove Record</a></td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items created yet</p>
    }

   


        <br />
    
        <div class = "row" >
        <div class="col-md-2">
         <label for="filter">Filter By:</label>
            <select name="filter" id="filterOption">
                <option value="default">Select Option</option>
                <option value="username">User Name</option>
                <option value="userType">User Type</option>
                <option value="firstName">First Name</option>
                <option value="lastName">Last Name</option>
            </select>
        </div>
        <div class="col-md-2">
         <label for="filterOrder">Order:</label>
            <select name ="filterOrder" id="filterOrder">
                <option value="asc">ASC</option>
                <option value="desc">DESC</option>
            </select>
       </div>
       <div class="col-md-3">
           <button type="button">Generate Report</button>
       </div>
              
       </div>
             

   
      
 

    </body>

</html>