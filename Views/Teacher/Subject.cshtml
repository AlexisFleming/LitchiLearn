@using Final_LitchiLearn.Models
@model IEnumerable<Final_LitchiLearn.Models.Subject>
@{
   
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Subject"] - LitchiLearn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
</head>
<body>
<h1> Your Subjects</h1>

@if(Model.Count()>0)
{
        <table class="table" style="width:100%">
            <thead>
                <tr>
                    <th>
                        SubjectID
                    </th>
                    <th>
                        Subject
                    </th>                    

                </tr>
            </thead>

            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td width="35%">@subject.SubjectName</td>
                        
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Teacher" asp-action="Update" asp-route-ID="@subject.SubjectID" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Teacher" asp-action="Delete" asp-route-ID="@subject.SubjectID" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
}
else
{
    <p>No Subjects Assigned to you yet.</p>
}


</body>
</html>
