@using Final_LitchiLearn.Models
@model IEnumerable<Final_LitchiLearn.Models.Topics>
@{
   
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Topic"] - LitchiLearn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
</head>
<body>
    <a asp-controller="Teacher" asp-action="TopicCreate" class="btn btn-primary">Add Topics</a>
    <br /><br />
    @if (Model.Count() > 0)
    {
        @foreach(var topic in Model)
        {
            @*<div class="row">*@
                <div class="card text-center">               
                    <h5 class="card-header">@topic.TopicName</h5>
                
                    <div class="card-body">
                        <h5 >@topic.TopicDesc</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    
                    </div>
                    <div>
                        <a asp-controller="Teacher" asp-action="UpdateTopic" asp-route-ID="@topic.TopicID" class="btn btn-primary">Update</a>
                        <a asp-controller="Teacher" asp-action="DeleteTopic" asp-route-ID="@topic.TopicID" class="btn btn-danger ">Delete</a>
                    </div>
                </div>
            @*</div>*@
            <br />
        }
        
       
      
     
   
       @* <table class="table" style="width:100%">*@
           @* <thead>
                <tr>
                    <th>
                        TopicID
                    </th>
                    <th>
                        TopicName
                    </th>

                </tr>
            </thead>*@

         @*   <tbody>
                @foreach (var topic in Model)
                {
                    <tr>
                        <td width="35%">@topic.TopicName</td>

                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Teacher" asp-action="Update" asp-route-ID="@topic.TopicID" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Teacher" asp-action="Delete" asp-route-ID="@topic.TopicID" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>*@
    }
    else
    {
        <p>No lessons yet. Stay tuned.</p>
    }

   
</body>
</html>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
