@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>

            @{
                string sRole = ViewBag.roleChange;
                sRole = sRole.ToUpper();

            }

            Select Role: @sRole
