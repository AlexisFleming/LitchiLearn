            <label>@Model[1].RoleName</label><br>

            <input type="hidden" asp-for="@Model[2].RoleId" />
            <input type="hidden" asp-for="@Model[2].RoleName" />
            <input type="radio" name="A" asp-for="@Model[2].Selected" value="True">
            <label>@Model[2].RoleName</label><br>

