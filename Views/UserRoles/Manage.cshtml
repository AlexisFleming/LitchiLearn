            <input type="radio" name="A" asp-for="@Model[0].Selected" value="True" required>
            <label>@Model[0].RoleName</label><br>

            <input type="hidden" asp-for="@Model[1].RoleId" />
            <input type="hidden" asp-for="@Model[1].RoleName" />
