@using Final_LitchiLearn.Models
@model List<Final_LitchiLearn.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Pages/AdminDashboardLayout.cshtml";
}
<h1>All Users On System</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {

            <tr>
                <td>
                   @user.UserName

                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                
                

            </tr>
        }
    </tbody>
</table>