@{
    @model IEnumerable<Final_LitchiLearn.Models.TimeTable>

    ViewData["Title"] = "Time Table";
    Layout = "~/Views/Student/_LayoutTimeTable.cshtml";

}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-5">
         <h2 class= align="right" style="color :#ff8c69" >Time Table</h2>
        </div>
        <div class="col-5 text-right">
          
        </div>
    </div>
    <br />

@if (Model.Count() >0)
{
    <table class="table table-striped" >
        <thead>
            <tr>
                <th>
                    Subject Code
                </th>
                <th>
                    Subject
                </th>
                <th>
                    Day
                </th>
                <th>
                   Time
                </th>
                <th>
                    Venue
                </th>
            </tr>
        </thead>
        <tbody >
            @foreach (var TimeTable in Model)
            {
                <tr style="padding:10px">

                    <td width="23%">@TimeTable.SubjectID</td>
                    <td width="23%">@TimeTable.Subject</td>
                    <td width="23%">@TimeTable.Day</td>
                    <td width="23%">@TimeTable.Time</td>
                    <td width="23%">@TimeTable.Venue</td>
                     <td width="23%">   <div class="w-10 btn-group" style="color :#ff8c69"role="group" >
                            <a asp-controller="Student" asp-action="MySubjectPage" asp-route-ID="" class="btn btn-danger mx-1">Go to Subject</a>
                        </div></td>
                   
                     
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> Error Please contact a member of the Admin staff</p>
}
</div>